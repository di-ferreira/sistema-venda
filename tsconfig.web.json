{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/preload/*",
    "src/@types/*.ts",
    "src/database/*",
    "src/database/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  }
}
